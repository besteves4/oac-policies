PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX odrl: <http://www.w3.org/ns/odrl/2/>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX dpv: <https://w3id.org/dpv#>
PREFIX dpv-tech: <https://w3id.org/dpv/dpv-tech#>
PREFIX oac: <https://w3id.org/oac#>
PREFIX ex: <http://example.com>

<https://example.com/policy7> a odrl:Offer ;
    dct:description "Restrict the data usage to when a specific event has occurred" ;
    rdfs:comment """ODRL operators can be used to signal before (lt), during (eq) or after (gt) the event occurred.""" ;
    odrl:uid ex:policy7 ;
    odrl:permission [
        odrl:assigner ex:dataProviderA ;
        odrl:action odrl:use ;
        odrl:target ex:assetA ;
        odrl:constraint [
            odrl:leftOperand odrl:event ;
            odrl:operator odrl:gt ;
            odrl:rightOperand "Exhibition X" ] ] .